<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:dither="true">
                    <solid android:color="@color/ml_theme_accent" />
                </shape>
            </item>
            <item android:bottom="@dimen/ml_dimen_1">
                <shape android:dither="true">
                    <solid android:color="@color/ml_bg_gray_white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape android:dither="true">
                    <solid android:color="@color/ml_border_gray" />
                </shape>
            </item>
            <item android:bottom="@dimen/ml_dimen_1">
                <shape android:dither="true">
                    <solid android:color="@color/ml_bg_gray_white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>