<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/widget_toolbar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ml_chat_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/ml_bg_gray_white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ml_dimen_0_5"
                android:background="@color/ml_bg_view_divider" />

            <RelativeLayout
                android:id="@+id/ml_chat_top_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ml_dimen_48"
                android:layout_marginLeft="@dimen/ml_dimen_8"
                android:layout_marginRight="@dimen/ml_dimen_8">

                <Button
                    android:id="@+id/ml_btn_chat_send"
                    android:layout_width="@dimen/ml_dimen_56"
                    android:layout_height="@dimen/ml_dimen_36"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ml_dimen_8"
                    android:background="@drawable/ml_shape_btn_rectangle_blue"
                    android:text="@string/ml_send"
                    android:textColor="@color/ml_text_white"
                    android:textSize="@dimen/ml_size_16" />

                <!--<ImageButton-->
                    <!--android:id="@+id/ml_btn_chat_send"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="@dimen/ml_dimen_8"-->
                    <!--android:background="@color/ml_transparent"-->
                    <!--android:src="@mipmap/icon_send_white_24dp" />-->

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ml_dimen_36"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/ml_btn_chat_send"
                    android:background="@drawable/ml_shape_edit_oval"
                    android:hint="@string/ml_chat"
                    android:paddingLeft="@dimen/ml_dimen_16"
                    android:textColor="@color/ml_text_block"
                    android:textColorHint="@color/ml_text_hint_gray"
                    android:textSize="@dimen/ml_size_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/ml_chat_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ml_chat_input_layout"
            android:layout_alignParentTop="true">


        </ListView>
    </RelativeLayout>

</LinearLayout>