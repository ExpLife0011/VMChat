<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical">

    <include layout="@layout/widget_toolbar_communal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <!--<ImageView-->
        <!--android:id="@+id/ml_img_chat_bg"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@mipmap/bg_top" />-->

        <LinearLayout
            android:id="@+id/ml_layout_chat_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/ml_white_87"
            android:clipChildren="false"
            android:orientation="vertical">

            <!--输入条布局-->
            <RelativeLayout
                android:id="@+id/ml_layout_chat_input_top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:minHeight="@dimen/ml_dimen_48">

                    <RelativeLayout
                        android:id="@+id/ml_layout_chat_input_bar_right"
                        android:layout_width="@dimen/ml_dimen_48"
                        android:layout_height="@dimen/ml_dimen_48"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <!--语音按钮-->
                        <ImageView
                            android:id="@+id/ml_img_chat_voice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/ic_keyboard_voice_white_24dp"
                            android:tint="@color/ml_red_87" />
                        <!--发送按钮-->
                        <ImageView
                            android:id="@+id/ml_img_chat_send"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/ic_send_white_24dp"
                            android:tint="@color/ml_red_87"
                            android:visibility="gone" />

                    </RelativeLayout>
                    <!--表情按钮-->
                    <RelativeLayout
                        android:id="@+id/ml_layout_chat_input_bar_left"
                        android:layout_width="@dimen/ml_dimen_48"
                        android:layout_height="@dimen/ml_dimen_48"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/ml_img_chat_emotion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/ic_keyboard_face_white_24dp"
                            android:tint="@color/ml_red_87" />

                        <ImageView
                            android:id="@+id/ml_img_chat_keyboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/ic_keyboard_white_24dp"
                            android:tint="@color/ml_red_87"
                            android:visibility="gone" />
                    </RelativeLayout>
                    <!--输入框-->
                    <EditText
                        android:id="@+id/ml_edit_chat_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/ml_layout_chat_input_bar_right"
                        android:layout_toRightOf="@id/ml_layout_chat_input_bar_left"
                        android:background="@null"
                        android:hint="@string/ml_hint_chat"
                        android:maxLines="3"
                        android:paddingBottom="@dimen/ml_dimen_8"
                        android:paddingTop="@dimen/ml_dimen_8"
                        android:textColor="@color/ml_black_87"
                        android:textColorHint="@color/ml_black_26"
                        android:textSize="@dimen/ml_size_16" />
                </RelativeLayout>

                <!--<net.melove.demo.chat.widget.MLRecordView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/ml_dimen_48"-->
                <!--android:background="@color/ml_theme_background_primary"-->
                <!--android:clipChildren="false"-->
                <!--android:visibility="gone" />-->
            </RelativeLayout>

            <!--聊天表情框-->
            <RelativeLayout
                android:id="@+id/ml_layout_chat_input_smilies"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ml_dimen_192"
                android:visibility="gone">

                <GridView
                    android:id="@+id/ml_gridview_caht_input_smilies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </GridView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ml_layout_chat_input"
            android:layout_alignParentTop="true"
            android:clipChildren="true">


        </LinearLayout>

        <!--扩展菜单布局-->
        <LinearLayout
            android:id="@+id/ml_layout_attach_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ml_black_26"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ml_white_87"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/ml_dimen_8"
                android:paddingLeft="@dimen/ml_dimen_12"
                android:paddingRight="@dimen/ml_dimen_12"
                android:paddingTop="@dimen/ml_dimen_16">

                <LinearLayout
                    android:id="@+id/ml_attach_photo"
                    android:layout_width="@dimen/ml_dimen_84"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <net.melove.demo.chat.widget.MLImageView
                        android:id="@+id/ml_img_attch_photo"
                        android:layout_width="@dimen/ml_dimen_52"
                        android:layout_height="@dimen/ml_dimen_52"
                        android:layout_marginBottom="@dimen/ml_dimen_8"
                        android:clickable="false"
                        android:src="@mipmap/ic_attach_photo"
                        melove:ml_border_color="@color/ml_white_87"
                        melove:ml_border_width="@dimen/ml_dimen_2"
                        melove:ml_radius="@dimen/ml_dimen_8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ml_photo" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ml_attach_video"
                    android:layout_width="@dimen/ml_dimen_84"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <net.melove.demo.chat.widget.MLImageView
                        android:id="@+id/ml_img_attach_video"
                        android:layout_width="@dimen/ml_dimen_52"
                        android:layout_height="@dimen/ml_dimen_52"
                        android:layout_marginBottom="@dimen/ml_dimen_8"
                        android:clickable="false"
                        android:src="@mipmap/ic_attach_video"
                        melove:ml_border_color="@color/ml_white_87"
                        melove:ml_border_width="@dimen/ml_dimen_2"
                        melove:ml_radius="@dimen/ml_dimen_8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ml_video" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ml_attach_file"
                    android:layout_width="@dimen/ml_dimen_84"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <net.melove.demo.chat.widget.MLImageView
                        android:id="@+id/ml_img_attach_file"
                        android:layout_width="@dimen/ml_dimen_52"
                        android:layout_height="@dimen/ml_dimen_52"
                        android:layout_marginBottom="@dimen/ml_dimen_8"
                        android:src="@mipmap/ic_attach_file"
                        melove:ml_border_color="@color/ml_white_87"
                        melove:ml_border_width="@dimen/ml_dimen_2"
                        melove:ml_radius="@dimen/ml_dimen_8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ml_file" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ml_attach_location"
                    android:layout_width="@dimen/ml_dimen_84"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <net.melove.demo.chat.widget.MLImageView
                        android:id="@+id/ml_img_attach_location"
                        android:layout_width="@dimen/ml_dimen_52"
                        android:layout_height="@dimen/ml_dimen_52"
                        android:layout_marginBottom="@dimen/ml_dimen_8"
                        android:src="@mipmap/ic_attach_location"
                        melove:ml_border_color="@color/ml_white_87"
                        melove:ml_border_width="@dimen/ml_dimen_2"
                        melove:ml_radius="@dimen/ml_dimen_8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ml_location" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ml_white_87"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/ml_dimen_16"
                android:paddingLeft="@dimen/ml_dimen_12"
                android:paddingRight="@dimen/ml_dimen_12"
                android:paddingTop="@dimen/ml_dimen_8">

                <LinearLayout
                    android:id="@+id/ml_attach_gift"
                    android:layout_width="@dimen/ml_dimen_84"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <net.melove.demo.chat.widget.MLImageView
                        android:id="@+id/ml_img_attach_gift"
                        android:layout_width="@dimen/ml_dimen_52"
                        android:layout_height="@dimen/ml_dimen_52"
                        android:layout_marginBottom="@dimen/ml_dimen_8"
                        android:src="@mipmap/ic_attach_gift"
                        melove:ml_border_color="@color/ml_white_87"
                        melove:ml_border_width="@dimen/ml_dimen_2"
                        melove:ml_radius="@dimen/ml_dimen_8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ml_gift" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ml_attach_contacts"
                    android:layout_width="@dimen/ml_dimen_84"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <net.melove.demo.chat.widget.MLImageView
                        android:id="@+id/ml_img_attach_contacts"
                        android:layout_width="@dimen/ml_dimen_52"
                        android:layout_height="@dimen/ml_dimen_52"
                        android:layout_marginBottom="@dimen/ml_dimen_8"
                        android:src="@mipmap/ic_attach_contacts"
                        melove:ml_border_color="@color/ml_white_87"
                        melove:ml_border_width="@dimen/ml_dimen_2"
                        melove:ml_radius="@dimen/ml_dimen_8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ml_contacts" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>