<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ml_theme_background"
    android:fitsSystemWindows="true"
    tools:context=".chat.MLChatActivity"
    >
    <!--Toolbar-->
    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/widget_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ml_dimen_56"
        android:theme="@style/MLTheme.AppBarOverlay"
        app:elevation="@dimen/ml_dimen_0"
        >

        <!--公共的 Toolbar 控件-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/widget_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:transitionName="@string/ml_shared_element_toolbar"
            app:elevation="@dimen/ml_dimen_0"
            app:popupTheme="@style/MLTheme.PopupOverlay"
            app:theme="@style/MLTheme.ToolbarOverlay"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <net.melove.app.chat.widget.MLImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/ml_dimen_36"
                    android:layout_height="@dimen/ml_dimen_36"
                    android:src="@mipmap/ic_character_blackcat"
                    android:transitionName="@string/ml_shared_element_avatar"
                    app:ml_border_width="@dimen/ml_dimen_2"
                    app:ml_dispatch_touch_event="false"
                    app:ml_shape_type="round"
                    />
                <TextView
                    android:id="@+id/text_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ml_size_16"
                    android:text="@string/ml_app_name"
                    android:textSize="@dimen/ml_size_18"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <!--中间内容部分-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:clipChildren="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <ImageView
            android:id="@+id/img_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_chat"
            />

        <LinearLayout
            android:id="@+id/layout_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:animateLayoutChanges="true"
            android:background="@color/ml_white_87"
            android:clipChildren="false"
            android:orientation="vertical"
            >

            <!--输入条布局-->
            <RelativeLayout
                android:id="@+id/layout_input_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:clipChildren="false"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:clipChildren="false"
                    android:minHeight="@dimen/ml_dimen_48"
                    >

                    <RelativeLayout
                        android:id="@+id/layout_input_right"
                        android:layout_width="@dimen/ml_dimen_48"
                        android:layout_height="@dimen/ml_dimen_48"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        >

                        <!--发送按钮-->
                        <ImageButton
                            android:id="@+id/img_send"
                            android:layout_width="@dimen/ml_dimen_48"
                            android:layout_height="@dimen/ml_dimen_48"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ml_click_rectangle_transparent"
                            android:src="@mipmap/ic_send_white_24dp"
                            android:tint="@color/ml_red_87"
                            android:visibility="gone"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_input_left"
                        android:layout_width="@dimen/ml_dimen_48"
                        android:layout_height="@dimen/ml_dimen_48"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:animateLayoutChanges="true"
                        >
                        <!--表情按钮-->
                        <ImageButton
                            android:id="@+id/img_emotion"
                            android:layout_width="@dimen/ml_dimen_48"
                            android:layout_height="@dimen/ml_dimen_48"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ml_click_rectangle_transparent"
                            android:src="@mipmap/ic_keyboard_face_white_24dp"
                            android:tint="@color/ml_red_87"
                            />

                        <ImageButton
                            android:id="@+id/img_keyboard"
                            android:layout_width="@dimen/ml_dimen_48"
                            android:layout_height="@dimen/ml_dimen_48"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ml_click_rectangle_transparent"
                            android:src="@mipmap/ic_keyboard_white_24dp"
                            android:tint="@color/ml_red_87"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                    <!--输入框-->
                    <EditText
                        android:id="@+id/edit_input_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/layout_input_right"
                        android:layout_toRightOf="@id/layout_input_left"
                        android:background="@null"
                        android:hint="@string/ml_hint_chat"
                        android:maxLines="3"
                        android:paddingBottom="@dimen/ml_dimen_8"
                        android:paddingTop="@dimen/ml_dimen_8"
                        android:textColor="@color/ml_black_87"
                        android:textColorHint="@color/ml_black_38"
                        android:textSize="@dimen/ml_size_16"
                        />
                </RelativeLayout>

                <!--录音控件-->
                <net.melove.app.chat.widget.MLRecordView
                    android:id="@+id/view_record_voice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ml_dimen_48"
                    android:layout_alignParentRight="true"
                    android:clipChildren="false"
                    android:visibility="visible"
                    app:ml_record_indicator_color="@color/ml_theme_primary_light"
                    app:ml_record_indicator_size="@dimen/ml_dimen_16"
                    app:ml_record_text_color="@color/ml_black_54"
                    app:ml_record_text_size="@dimen/ml_size_16"
                    app:ml_record_touch_color="@color/ml_red_100"
                    app:ml_record_touch_icon="@mipmap/ic_mic_white_24dp"
                    app:ml_record_touch_size="@dimen/ml_dimen_48"
                    app:ml_record_touch_text="滑动取消"
                    app:ml_record_waveform_color="@color/ml_orange_87"
                    app:ml_record_waveform_interval="@dimen/ml_dimen_1"
                    app:ml_record_waveform_width="@dimen/ml_dimen_2"
                    />
            </RelativeLayout>

            <!--聊天表情框-->
            <RelativeLayout
                android:id="@+id/layout_emotion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ml_dimen_224"
                android:visibility="gone"
                >

                <GridView
                    android:id="@+id/grid_view_emotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </GridView>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout_input"
            android:layout_alignParentTop="true"
            android:clipChildren="true"
            >
            <!--官方下拉刷新控件-->
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="true"
                    android:fadingEdge="none"
                    android:scrollbars="vertical"
                    />
            </android.support.v4.widget.SwipeRefreshLayout>

            <!--显示有多少条新消息-->
            <Button
                android:id="@+id/btn_new_message"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ml_dimen_36"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/ml_dimen_8"
                android:background="@drawable/ml_shape_circle"
                android:padding="@dimen/ml_dimen_8"
                android:text="@string/ml_hint_msg_new"
                android:visibility="visible"
                />
        </RelativeLayout>

        <!--扩展菜单布局-->
        <LinearLayout
            android:id="@+id/layout_attach_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ml_black_54"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <GridView
                android:id="@+id/grid_view_attach_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ml_white_100"
                android:numColumns="4"
                android:paddingLeft="@dimen/ml_dimen_12"
                android:paddingRight="@dimen/ml_dimen_12"
                />

        </LinearLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>