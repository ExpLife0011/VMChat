<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ml_item_click_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/ml_dimen_12"
    android:paddingTop="@dimen/ml_dimen_12"
    >

    <net.melove.app.chat.ui.widget.MLImageView
        android:id="@+id/img_menu_photo"
        android:layout_width="@dimen/ml_dimen_52"
        android:layout_height="@dimen/ml_dimen_52"
        android:layout_marginBottom="@dimen/ml_dimen_8"
        android:src="@mipmap/ic_launcher"
        melove:ml_border_color="@color/ml_white_87"
        melove:ml_border_width="@dimen/ml_dimen_2"
        melove:ml_radius="@dimen/ml_dimen_8"
        />

    <TextView
        android:id="@+id/text_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ml_photo"
        />
</LinearLayout>