<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.melove.demo.chat.fragment.MLTestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/ml_dimen_8"
        android:orientation="vertical">


        <Button
            android:id="@+id/ml_btn_signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ml_shape_btn_rectangle_red"
            android:text="@string/ml_signout"
            android:textColor="@color/ml_text_white"
            android:textSize="@dimen/ml_size_18" />
    </LinearLayout>

</RelativeLayout>
