<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/ml_dimen_16"
    tools:context="net.melove.demo.chat.fragment.MLTestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/ml_btn_jump_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/ml_dimen_0"
            android:text="@string/ml_test" />

        <Button
            android:id="@+id/ml_btn_test_delete_conversation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除会话" />

        <Button
            android:id="@+id/ml_btn_test_import_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导入消息" />

        <Button
            android:id="@+id/ml_btn_test_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试注册" />

        <Button
            android:id="@+id/ml_btn_test_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试登陆" />

        <Button
            android:id="@+id/ml_btn_test_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送消息" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/ml_dimen_8"
        android:orientation="vertical">

        <Button
            android:id="@+id/ml_btn_signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ml_click_rectangle_red"
            android:text="@string/ml_signout"
            android:textColor="@color/ml_text_title_white"
            android:textSize="@dimen/ml_size_18" />
    </LinearLayout>

</RelativeLayout>
