<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ml_dimen_24"
    android:paddingRight="@dimen/ml_dimen_24"
    android:paddingTop="@dimen/ml_dimen_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ml_dialog_content_create_conversation"
        android:textColor="@color/ml_text_subtitle_black" />

    <EditText
        android:id="@+id/ml_edit_chat_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ml_hint_username" />
</LinearLayout>