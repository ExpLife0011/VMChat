<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ml_black_26"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ml_dimen_8"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ml_text_msg_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ml_dimen_16"
            android:text="@string/ml_hint_username"
            android:textColor="@color/ml_white_54"
            android:textSize="@dimen/ml_size_8" />

        <TextView
            android:id="@+id/ml_text_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ml_hint_time"
            android:textColor="@color/ml_white_54"
            android:textSize="@dimen/ml_size_6" />
    </LinearLayout>

    <TextView
        android:id="@+id/ml_text_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/ml_dimen_264"
        android:paddingLeft="@dimen/ml_dimen_8"
        android:paddingRight="@dimen/ml_dimen_8"
        android:paddingTop="@dimen/ml_dimen_4"
        android:text="@string/ml_app_name"
        android:textColor="@color/ml_white_87"
        android:textSize="@dimen/ml_size_14" />

</LinearLayout>