<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ml_bg_gray_white"
    android:orientation="vertical">

    <include layout="@layout/widget_toolbar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ml_dimen_16"
        android:background="@color/ml_bg_white"
        android:padding="@dimen/ml_dimen_8">


        <net.melove.demo.chat.widget.MLImageView
            android:id="@+id/ml_img_user_info_avatar"
            android:layout_width="@dimen/ml_dimen_56"
            android:layout_height="@dimen/ml_dimen_56"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/ml_dimen_8"
            android:layout_marginRight="@dimen/ml_dimen_8"
            android:src="@mipmap/icon_avatar_default"
            melove:shape_type="round" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ml_img_user_info_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ml_text_user_info_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ml_username"
                android:textColor="@color/ml_text_item_title_block"
                android:textSize="@dimen/ml_size_16" />

            <TextView
                android:id="@+id/ml_text_user_info_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ml_dimen_4"
                android:text="@string/ml_signature"
                android:textColor="@color/ml_text_gray"
                android:textSize="@dimen/ml_size_14" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ml_dimen_16"
        android:background="@color/ml_bg_white"
        android:paddingLeft="@dimen/ml_dimen_16">

        <TextView
            android:id="@+id/ml_text_user_info_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ml_dimen_8"
            android:layout_marginTop="@dimen/ml_dimen_8"
            android:text="@string/ml_tag"
            android:textColor="@color/ml_text_block"
            android:textSize="@dimen/ml_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ml_dimen_16"
        android:layout_marginTop="@dimen/ml_dimen_32"
        android:orientation="vertical">

        <Button
            android:id="@+id/ml_btn_user_info_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ml_btn_drawer_item"
            android:text="@string/ml_add_friend"
            android:textColor="@color/ml_text_block"
            android:textSize="@dimen/ml_size_16" />

        <Button
            android:id="@+id/ml_btn_user_info_chat_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ml_dimen_16"
            android:background="@drawable/ml_btn_drawer_item"
            android:text="@string/ml_chat_start"
            android:textColor="@color/ml_text_block"
            android:textSize="@dimen/ml_size_16"
            android:visibility="gone"/>

        <Button
            android:id="@+id/ml_btn_user_info_chat_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ml_dimen_16"
            android:layout_marginTop="@dimen/ml_dimen_16"
            android:background="@drawable/ml_btn_drawer_item"
            android:text="@string/ml_chat_video"
            android:textColor="@color/ml_text_block"
            android:textSize="@dimen/ml_size_16"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>