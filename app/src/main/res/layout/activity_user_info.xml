<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vm_theme_background_light"
    android:fitsSystemWindows="true"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/widget_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/vm_dimen_0"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/widget_collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:elevation="@dimen/vm_dimen_0"
            app:expandedTitleGravity="center_horizontal|bottom"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

            <com.vmloft.develop.library.tools.widget.VMImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vm_dimen_256"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_top"
                android:tint="@color/vm_black_38"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                app:vm_shape_type="normal"
                />

            <LinearLayout
                android:id="@+id/layout_head_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="@dimen/vm_dimen_24"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5"
                >
                <!--toolbar 展开时显示头像-->
                <com.vmloft.develop.library.tools.widget.VMImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/vm_dimen_96"
                    android:layout_height="@dimen/vm_dimen_96"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/vm_dimen_56"
                    android:src="@drawable/ic_character_blackcat"
                    android:transitionName="@string/shared_element_avatar"
                    app:vm_border_width="@dimen/vm_dimen_2"
                    app:vm_shape_type="round"
                    />
            </LinearLayout>
            <!--主界面 Toolbar-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/widget_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:fitsSystemWindows="false"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/AppTheme.ToolbarOverlay"
                android:transitionName="@string/shared_element_toolbar"
                app:elevation="@dimen/vm_dimen_0"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <!--中间内容布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vm_dimen_8"
            android:orientation="vertical"
            >

            <!--账户ID-->
            <TextView
                android:id="@+id/text_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vm_dimen_48"
                android:layout_marginTop="@dimen/vm_dimen_4"
                android:background="@color/vm_white_87"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/vm_dimen_16"
                android:text="@string/app_name"
                />
            <!--邮箱-->
            <TextView
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vm_dimen_48"
                android:layout_marginTop="@dimen/vm_dimen_4"
                android:background="@color/vm_white_87"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/vm_dimen_16"
                android:text="@string/app_name"
                />
            <!--签名-->
            <TextView
                android:id="@+id/text_signature"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vm_dimen_48"
                android:layout_marginTop="@dimen/vm_dimen_4"
                android:background="@color/vm_white_87"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/vm_dimen_16"
                android:text="@string/app_name"
                />
            <!--位置-->
            <TextView
                android:id="@+id/text_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vm_dimen_48"
                android:layout_marginTop="@dimen/vm_dimen_4"
                android:background="@color/vm_white_87"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/vm_dimen_16"
                android:text="@string/app_name"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <!--悬浮按钮 设置在锚点在appbar上，可以滚动隐藏-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_or_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vm_dimen_16"
        android:src="@drawable/ic_add_white_24dp"
        android:visibility="visible"
        app:fabSize="normal"
        app:layout_anchor="@id/widget_appbar"
        app:layout_anchorGravity="bottom|end"
        />
</android.support.design.widget.CoordinatorLayout>