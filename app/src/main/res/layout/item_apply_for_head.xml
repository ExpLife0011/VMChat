<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ml_bg_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ml_dimen_48"
        android:layout_margin="@dimen/ml_dimen_4">

        <Button
            android:id="@+id/ml_btn_apply_for_search"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ml_dimen_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ml_shape_btn_oval_red"
            android:text="@string/ml_search"
            android:textColor="@color/ml_text_white"
            android:textSize="@dimen/ml_size_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ml_dimen_4"
            android:layout_toLeftOf="@id/ml_btn_apply_for_search"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ml_edit_apply_for_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ml_dimen_40"
                android:background="@drawable/ml_shape_edit_oval"
                android:drawableLeft="@mipmap/icon_emotion_smile_24dp"
                android:drawablePadding="@dimen/ml_dimen_8"
                android:hint="@string/ml_username"
                android:padding="@dimen/ml_dimen_8" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>