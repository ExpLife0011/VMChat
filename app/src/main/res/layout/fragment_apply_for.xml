<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ml_theme_background"
    android:orientation="vertical">
    <!--聊天消息显示控件 ListView
        cacheColorHint  低版本会导致滑动黑色
        divider         设置分割线颜色 不想要可以设置 @null
        fadeScrollbars  是否自动隐藏滑动条
        fadingEdge      listview上下黑色阴影，（在5.0以上没有）
        listSelector    listview项选中时的颜色 建议设置透明（5.0为涟漪效果）
        scrollingCache  滑动时是否缓存颜色
    -->
    <ListView
        android:id="@+id/ml_listview_applyfor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@null"
        android:descendantFocusability="blocksDescendants"
        android:divider="@color/ml_divider_54"
        android:dividerHeight="@dimen/ml_dimen_1"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:listSelector="@color/ml_transparent"
        android:scrollingCache="false"
        android:transcriptMode="alwaysScroll" />

    <!--空数据时显示的布局-->
    <RelativeLayout
        android:id="@+id/ml_layout_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ml_red_87"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/ic_empty" />
    </RelativeLayout>
</LinearLayout>