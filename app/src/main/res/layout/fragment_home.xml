<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/ml_widget_tablayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ml_dimen_36"
            app:tabBackground="@drawable/ml_click_rectangle_white"
            app:tabIndicatorColor="@color/ml_tab_indicator"
            app:tabIndicatorHeight="@dimen/ml_dimen_2"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/ml_tab_selected"
            app:tabTextColor="@color/ml_tab_normal">

        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/ml_view_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>