<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ml_bg_gray_white"
    android:orientation="vertical">

    <include layout="@layout/widget_toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/ml_list_applyfor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:divider="@color/ml_bg_view_divider"
            android:dividerHeight="@dimen/ml_dimen_px_1"
            android:listSelector="@color/ml_transparent"></ListView>
    </LinearLayout>
</LinearLayout>