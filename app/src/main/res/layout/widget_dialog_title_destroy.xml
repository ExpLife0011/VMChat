<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ml_text_dialog_title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ml_dimen_24"
            android:text="0"
            android:textColor="@color/ml_red_87"
            android:textSize="@dimen/ml_size_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ml_text_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/ml_dimen_8"
            android:layout_marginLeft="@dimen/ml_dimen_24"
            android:layout_marginRight="@dimen/ml_dimen_24"
            android:layout_marginTop="@dimen/ml_dimen_16"
            android:layout_toLeftOf="@id/ml_text_dialog_title_time"
            android:text="@string/ml_dialog_title_message"
            android:textColor="@color/ml_black_87"
            android:textSize="@dimen/ml_size_20" />
    </RelativeLayout>
</LinearLayout>