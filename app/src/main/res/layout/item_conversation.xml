<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ml_dimen_56"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ml_dimen_16"
    android:paddingRight="@dimen/ml_dimen_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ml_dimen_48">

        <net.melove.demo.chat.widget.MLImageView
            android:id="@+id/ml_img_conversation_avatar"
            android:layout_width="@dimen/ml_dimen_48"
            android:layout_height="@dimen/ml_dimen_48"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_character_blackcat"
            melove:border_color="@color/ml_border_gray"
            melove:border_width="@dimen/ml_dimen_1"
            melove:shape_type="round" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ml_dimen_72"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ml_text_conversation_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ml_username"
                android:textColor="@color/ml_text_item_title_block"
                android:textSize="@dimen/ml_size_14" />

            <TextView
                android:id="@+id/ml_text_conversation_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ml_app_name"
                android:textColor="@color/ml_text_item_subtitle_block"
                android:textSize="@dimen/ml_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ml_dimen_8"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ml_text_conversation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ml_app_name"
                android:textColor="@color/ml_text_item_subtitle_block"
                android:textSize="@dimen/ml_size_12" />

            <TextView
                android:id="@+id/ml_text_conversation_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ml_app_name"
                android:textColor="@color/ml_text_item_subtitle_block"
                android:textSize="@dimen/ml_size_12" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>