<resources>

    <!-- Base application theme. -->
    <style name="MLTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar background color-->
        <item name="colorPrimary">@color/ml_primary</item>
        <!--status bar color-->
        <item name="colorPrimaryDark">@color/ml_primary_light</item>
        <item name="android:windowBackground">@color/ml_bg_gray_white</item>

        <!--menu anim style-->
        <item name="drawerArrowStyle">@style/MLTheme.DrawerArrowToggle</item>

        <!-- colorAccent is used as the default value for colorControlActivated, which is used to tint widgets -->
        <!--<item name="colorAccent">@color/ml_accent_1</item>-->

        <!--自定义搜索样式-->
        <item name="searchViewStyle">@style/MLSearchViewStyle</item>
    </style>

    <style name="MLTheme.Red" parent="MLTheme.Base">

    </style>


    <style name="MLSearchViewStyle" parent="Widget.AppCompat.SearchView">

    </style>

    <!-- 箭头颜色 -->
    <style name="MLTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/ml_white</item>
    </style>


    <style name="AnimFade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/ml_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/ml_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/ml_fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/ml_fade_out</item>
    </style>

    <style name="MLTheme.AnimFade" parent="MLTheme.Red">
        <item name="android:windowAnimationStyle">@style/AnimFade</item>
    </style>

</resources>
