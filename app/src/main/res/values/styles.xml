<resources>
    <!-- 应用基础主题 -->
    <style name="AppTheme" parent="VMTheme">
        <!-- 在这里自定义自己的主题 -->
        <!-- 默认主要颜色，一般是 Toolbar 等颜色 -->
        <item name="colorPrimary">@color/vm_theme_primary_light</item>
        <!-- 深一些的主要色，一般是状态栏等颜色 -->
        <item name="colorPrimaryDark">@color/vm_theme_primary_dark_light</item>
        <!--各控件激活时的颜色，一般是 CheckBox、EditText、Switch、Spinner、RadioButton 等控件激活的颜色-->
        <item name="colorAccent">@color/vm_theme_accent_light</item>

        <!--设置主题不需要ActionBar-->
        <item name="windowActionBar">false</item>
        <!--设置主题不需要Title-->
        <item name="windowNoTitle">true</item>

        <!--设置 ActionMode 效果，防止 ActionMode 将Toolbar顶下去-->
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <!--定义 Activity 切换动画-->
        <item name="android:windowAnimationStyle">@style/AnimSlide</item>

        <!--设置 Dialog 样式 在4.x上会导致ProgressDialog有双重背景，暂时取消设置-->
        <!--<item name="android:dialogTheme">@style/AppTheme.DialogOverlay</item>-->

        <!--设置是否允许使用转场动画-->
        <item name="android:windowContentTransitions">true</item>
        <!--指定进入和退出的转场动画-->
        <item name="android:windowEnterTransition">@transition/transition_fade</item>
        <item name="android:windowExitTransition">@transition/transition_fade</item>
        <!--指定界面共享元素的转场动画-->
        <!--<item name="android:windowSharedElementEnterTransition">@transition/transition_fade_in</item>-->
        <!--<item name="android:windowSharedElementExitTransition">@transition/transition_fade_out</item>-->
    </style>

    <!-- 默认主题 -->
    <style name="AppTheme.Default">
        <!-- 设置允许修改系统栏的背景色 比如导航栏 状态栏等-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--设置状态栏为透明-->
        <item name="android:statusBarColor">@color/vm_transparent</item>
        <!--设置导航栏半透明效果-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--设置导航栏背景色-->
        <item name="android:navigationBarColor">@color/vm_theme_primary_dark_light</item>

    </style>

    <!--启动时的主题样式-->
    <style name="AppTheme.Launcher">
        <!--防止启动瞬间黑屏或白屏，程序启动时的背景图，可以设置为一张代表性的logo，或者设置app框架类图-->
        <item name="android:windowBackground">@drawable/bg_launcher_statusbar_toolbar_tab</item>
        <!--颜色背景-->
        <item name="android:colorBackground">@color/vm_theme_background_light</item>
        <!--5.0以上的系统可以设置状态栏是否透明-->
        <item name="android:statusBarColor">@color/vm_theme_primary_dark_light</item>
    </style>

    <!--透明主题-->
    <style name="AppTheme.Transparent">
        <!--<item name="android:windowAnimationStyle">@style/AnimFade</item>-->
        <item name="android:windowBackground">@color/vm_theme_background_light</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 默认主要颜色，一般是 Toolbar 等颜色 -->
        <item name="android:colorPrimary">@color/vm_transparent</item>
        <!-- 深一些的主要色，一般是状态栏等颜色 -->
        <item name="android:colorPrimaryDark">@color/vm_transparent</item>
        <!--设置状态栏颜色为透明-->
        <item name="android:statusBarColor">@color/vm_transparent</item>
        <!--设置导航栏半透明效果-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--设置导航栏背景色-->
        <item name="android:navigationBarColor">@color/vm_black_38</item>
    </style>

    <!--半透明主题-->
    <style name="AppTheme.Translucent">
        <!--<item name="android:windowAnimationStyle">@style/AnimFade</item>-->
        <item name="android:windowBackground">@color/vm_theme_background_light</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 默认主要颜色，一般是 Toolbar 等颜色 -->
        <item name="android:colorPrimary">@color/vm_black_38</item>
        <!-- 深一些的主要色，一般是状态栏等颜色 -->
        <item name="android:colorPrimaryDark">@color/vm_translucent</item>
        <!--设置状态栏颜色黑色38%-->
        <item name="android:statusBarColor">@color/vm_translucent</item>
        <!--设置导航栏半透明效果-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--设置导航栏背景色-->
        <item name="android:navigationBarColor">@color/vm_black_38</item>
    </style>

    <!--Activity切换的 Fade 动画-->
    <style name="AnimFade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_fade_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_fade_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_fade_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_fade_exit</item>
    </style>
    <!--Activity切换 Slide 动画-->
    <style name="AnimSlide" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_right_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_slide_left_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_slide_left_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_right_exit</item>
    </style>

    <!--自定义默认 AppBar 样式，这里为了让文字显示为白色，继承黑色样式的ActionBar-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--Appbar 控制器颜色-->
        <item name="colorControlNormal">@color/vm_white_100</item>
        <!--Appbar 标题颜色-->
        <item name="android:textColor">@color/vm_white_100</item>
        <!--Appbar 标题大小-->
        <item name="android:textSize">@dimen/vm_size_16</item>
        <!--Appbar 标题样式-->
        <item name="android:textStyle">normal</item>
        <!--更改菜单按钮样式 此菜单直的是当 action过多显示不全，会有三个小点儿样式-->
        <!--<item name="android:actionOverflowButtonStyle">@style/AppTheme.ActionBarOverflow</item>-->
    </style>

    <!--自定义 Toolbar 样式，这里为了让文字显示为白色，继承黑色样式的ActionBar-->
    <style name="AppTheme.ToolbarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--Toolbar 控制器颜色-->
        <item name="colorControlNormal">@color/vm_white_100</item>
        <!--Toolbar 上文字颜色-->
        <item name="android:textColor">@color/vm_white_100</item>
        <!--Toolbar 文字大小-->
        <item name="android:textSize">@dimen/vm_size_16</item>
        <!--Toolbar 文字样式-->
        <item name="android:textStyle">normal</item>
    </style>

    <!--自定义溢出菜单图标样式-->
    <style name="AppTheme.ActionBarOverflow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_add_white_24dp</item>
    </style>

    <!--自定 Toolbar 弹出 PopupMenu 样式，要想此设置生效，在布局文件必须要自定义命名空间 xmlns：app-->
    <style name="AppTheme.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--设置菜单项文字的背景-->
        <!--<item name="android:background">@drawable/vm_popup_backaground</item>-->
        <!--弹出菜单背景颜色-->
        <!--<item name="android:colorBackground">@color/vm_white_87</item>-->
        <!--弹出菜单项的背景设置 主要是为了添加点击效果-->
        <!--<item name="android:itemBackground">@drawable/vm_click_rectangle_white</item>-->
        <!--设置弹出 PopupWindow 背景 这里使用了系统的资源 好像无效-->
        <!--<item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>-->
        <!--弹出菜单的文字颜色和大小-->
        <item name="android:textColor">@color/vm_black_87</item>
        <item name="android:textSize">@dimen/vm_size_16</item>
    </style>

    <!--红色按钮-->
    <style name="AppBtn.Red" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/vm_dimen_40</item>
        <item name="android:background">@drawable/click_rectangle_red</item>
        <item name="android:textColor">@color/vm_white_87</item>
        <item name="android:textSize">@dimen/vm_size_14</item>
    </style>
    <!--蓝色按钮-->
    <style name="AppBtn.Blue" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/vm_dimen_40</item>
        <item name="android:background">@drawable/click_rectangle_blue</item>
        <item name="android:textColor">@color/vm_white_87</item>
        <item name="android:textSize">@dimen/vm_size_14</item>
    </style>
    <!--白色按钮-->
    <style name="AppBtn.White" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/vm_dimen_40</item>
        <item name="android:background">@drawable/click_rectangle_white</item>
        <item name="android:textColor">@color/vm_black_87</item>
        <item name="android:textSize">@dimen/vm_size_14</item>
    </style>
    <!--透明按钮-->
    <style name="AppBtn.Transparent" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/vm_dimen_36</item>
        <item name="android:background">@drawable/click_rectangle_transparent</item>
        <item name="android:textColor">@color/vm_black_54</item>
        <item name="android:textSize">@dimen/vm_size_14</item>
    </style>

    <!--定义文本样式-->
    <style name="AppText.FABHint" parent="TextAppearance.Design.Hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_fab_text</item>
        <item name="android:textColor">@color/vm_black_54</item>
        <item name="android:textSize">@dimen/vm_size_14</item>
        <item name="android:paddingBottom">@dimen/vm_dimen_2</item>
        <item name="android:paddingLeft">@dimen/vm_dimen_4</item>
        <item name="android:paddingRight">@dimen/vm_dimen_4</item>
        <item name="android:paddingTop">@dimen/vm_dimen_2</item>
    </style>

    <!--自定义弹出框样式-->
    <style name="AppTheme.Light.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/vm_orange_87</item>
        <item name="android:textColorPrimary">@color/vm_blue_87</item>
        <item name="android:background">@color/vm_white_100</item>
    </style>
    <!--自定义弹出框样式-->
    <style name="AppTheme.DialogOverlay" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/vm_theme_accent_light</item>
        <item name="android:textColorPrimary">@color/vm_theme_primary_dark_light</item>
        <item name="android:background">@color/vm_theme_background_light</item>
        <!--<item name="android:colorBackground">@color/vm_transparent</item>-->
    </style>

</resources>
