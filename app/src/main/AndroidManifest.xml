<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.melove.demo.chat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MLTheme.Red">
        <activity
            android:name=".activity.MLMainActivity"
            android:label="@string/app_name"
            android:theme="@style/MLTheme.AnimFade">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MLSigninActivity"
            android:theme="@style/MLTheme.AnimFade" />
        <activity
            android:name=".activity.MLSignupActivity"
            android:theme="@style/MLTheme.AnimFade" />
    </application>

</manifest>
