    <!-- 程序的入口 -->
    <application
        android:name=".application.MLApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/ml_app_name"
        android:theme="@style/MLTheme.Default">

        <!-- Activity的基类 -->
        <activity
            android:name=".communal.base.MLBaseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MLTheme.Default"/>
        <!-- 被踢弹出类 -->
        <activity
            android:name=".main.MLConflictActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MLTheme.Transparent"/>
        <!-- 主界面 -->
        <activity
            android:name=".main.MLMainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MLTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- 登录界面 -->
        <activity
            android:name=".authentication.MLSigninActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MLTheme.Default"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <!-- 注册界面 -->
        <activity
            android:name=".authentication.MLSignupActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MLTheme.Default"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <!-- 账户信息界面 -->
        <activity
            android:name=".contacts.MLContactsInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MLTheme.Default"/>
        <!-- 聊天界面 -->
        <activity
            android:name=".conversation.MLChatActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MLTheme.Default"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <!-- 搜索界面 -->
        <activity
            android:name=".main.MLSearchActivity"
            android:theme="@style/MLTheme.Default"
            android:windowSoftInputMode="adjustResize|stateVisible"/>
        <!-- Invited消息详情界面 -->
        <activity
            android:name=".invited.MLInvitedDetailActivity"
            android:theme="@style/MLTheme.Default"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <!--测试 Activity-->
        <activity
            android:name=".test.MLTestActivity"
            android:label="@string/title_activity_mltest"
            android:parentActivityName=".communal.base.MLBaseActivity"
            android:theme="@style/MLTheme.Default">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.melove.demo.chat.communal.base.MLBaseActivity"/>
        </activity>

        <!-- 设置环信应用的appkey -->
        <meta-data
            android:name="EASEMOB_APPKEY"
            android:value="lzan13#hxsdkdemo"/>
